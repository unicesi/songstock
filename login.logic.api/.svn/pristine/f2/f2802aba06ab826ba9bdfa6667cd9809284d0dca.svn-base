package co.edu.uniandes.songstore.login.logic.api;

/**
 * IUserDTO
 * interface for data transfer objects for user management
 */
public interface ILoginDTO {

	/**
	 * return the user´s id
	 * @return the user´s id
	 */
	public abstract Long getID();

	/**
	 * modify the user´s id
	 * @param ID new id for the user
	 */
	public abstract void setID(Long ID);

	/**
	 * return the user´s name
	 * @return the user name
	 */
	public abstract String getName();

	/**
	 * modify the user´s name
	 * @param name new user´s name
	 */
	public abstract void setName(String name);
	
	/**
	 * return the user´s login
	 * @return the user´s login
	 */
	public abstract String getLogin();

	/**
	 * modify the user´s login
	 * @param login the new user´s login
	 */
	public abstract void setLogin(String login);

	/**
	 * return the user´s password
	 * @return the user password
	 */
	public abstract String getPassword();

	/**
	 * modify the user´s password
	 * @param name new user´s password
	 */
	public abstract void setPassword(String password);
	
}