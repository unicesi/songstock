<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="payments.persistence.jpa">
		<jta-data-source>songstock</jta-data-source>
		<class>payments.persistence.entities.AdditionalCharge</class>
		<class>payments.persistence.entities.AdditionalCharge_Invoice</class>
		<class>payments.persistence.entities.AdditionalCharge_InvoicePK</class>
		<class>payments.persistence.entities.Invoice</class>
		<class>payments.persistence.entities.Item</class>
		
		<properties>
			<property name="eclipselink.logging.level" value="FINE"/>
			<property name="eclipselink.logging.parameters" value="true"/>
			<property name="eclipselink.logging.level.sql" value="FINE"/>
		</properties>
	</persistence-unit>
</persistence>
